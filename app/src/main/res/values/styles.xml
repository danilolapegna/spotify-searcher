<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/SpotifyTextAppearanceBase</item>
        <item name="android:textViewStyle">@style/SpotifyTextAppearanceBase</item>
        <item name="android:buttonStyle">@style/SpotifyTextAppearanceBase</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <style name="Toolbar.TextAppearance" parent="SpotifyTextAppearanceBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.CollapsedTextAppearance" parent="Toolbar.TextAppearance">
        <!--        //Todo?-->
    </style>

    <style name="Toolbar.ExpandedTextAppearance" parent="Toolbar.TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:textSize">@dimen/expanded_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="SpotifyTextAppearanceBase">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/spotify_font</item>
        <item name="fontFamily">@font/spotify_font</item>
    </style>

    <dimen name="expanded_text_size">26dp</dimen>
</resources>
